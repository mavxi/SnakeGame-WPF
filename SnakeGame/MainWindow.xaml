<Window x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGame"
        mc:Ignorable="d"
        Title="Snake Game" Height="600" Width="600" WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Score and Status Bar -->
        <Border Grid.Row="0" Background="Yellow" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Points: " FontSize="16" FontWeight="Bold"/>
                <TextBlock x:Name="ScoreText" Text="0" FontSize="16" FontWeight="Bold"/>
                <TextBlock x:Name="PauseText" Text="Pause" Margin="20,0,0,0" FontSize="16" FontWeight="Bold" Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- Game Board -->
        <Canvas x:Name="GameCanvas" Grid.Row="1" Background="Black"/>
    </Grid>
</Window>
